{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Account Management System",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/accounting/index.js",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/src/accounting"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Run Tests",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/accounting/node_modules/.bin/jest",
            "args": [
                "--runInBand",
                "--no-cache"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/src/accounting"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Current Test File",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}/src/accounting/node_modules/.bin/jest",
            "args": [
                "${fileBasenameNoExtension}",
                "--runInBand",
                "--no-cache"
            ],
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/src/accounting"
        }
    ]
}
